<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ActionMode -->
    <style name="ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="titleTextStyle">@style/ActionModeTitleTextStyle</item>
    </style>

    <style name="ActionModeTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- AlertDialog -->
    <style name="MaterialThemeDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorControlActivated">@color/red</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorSurface">@color/gray</item>
        <item name="android:windowBackground">@color/primaryColor</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.App.Message.Text</item>
        <item name="android:checkedTextViewStyle">@style/MyChecked.TextView.Color</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MaterialAlertDialog.App.Message.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyChecked.TextView.Color" parent="Widget.MaterialComponents.CheckedTextView">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.CheckedTextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Switch -->
    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
        <item name="theme">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorSurface">@color/gray</item>
        <item name="colorOnSurface">@color/primaryLightColor</item>
        <item name="colorSecondary">@color/primaryColor</item>
    </style>

</resources>